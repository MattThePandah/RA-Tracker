## Server environment variables (copy to server/.env)

# IGDB (via Twitch)
TWITCH_CLIENT_ID=
TWITCH_CLIENT_SECRET=

# Optional: RetroAchievements credentials for server-side jobs and fallbacks
RA_USERNAME=
RA_API_KEY=

# Feature flags
ALL_CONSOLES_ENABLED=false
CONSOLES_ALLOWLIST=ra:27,ra:107,ra:46
COVER_PREFETCH_ENABLED=false
LIBRARY_BUILD_ON_START=false

# Rate limits and retries (sane defaults)
IGDB_RPS=3
IGDB_MAX_CONCURRENCY=2
IGDB_MAX_RETRIES=4
RA_RPS=1
RA_MAX_CONCURRENCY=1
RA_MAX_RETRIES=3

# Logging
COVERS_VERBOSE=false
COVERS_LOG_EVERY=100

